{
  "name": "github-action-reminder",
  "version": "1.1.1",
  "description": "GitHub Action to send a reminder to the PR that is lacking in activity.",
  "main": "src/index.ts",
  "scripts": {
    "build": "tsc",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest",
    "format": "prettier --write **/*.ts",
    "all": "npm run lint && npm run build && npm run package && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Sojusan/github-action-reminder.git"
  },
  "keywords": [
    "GitHub",
    "Action",
    "TypeScript"
  ],
  "author": "Rafa≈Ç Grzegorczyk",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Sojusan/github-action-reminder/issues"
  },
  "homepage": "https://github.com/Sojusan/github-action-reminder#readme",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@jest/types": "^29.6.3",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.9.1",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "@vercel/ncc": "^0.38.3",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-github": "^5.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.9.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  }
}
